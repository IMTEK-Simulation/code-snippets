Bootstrap: localimage

From: openmpi-4.0.2_psm2-11.2.185_gcc-7_ubuntu-18.sif

%post

    # Set env variables so we can compile our application
    export PATH=/usr/local/bin:$PATH
    export LD_RUN_PATH=/usr/lib64:/usr/local/lib:$LD_RUN_PATH

    # Clone and compile MPI benchmark
    cd /opt
    git clone https://github.com/LLNL/mpiBench.git
    cd mpiBench
    make

%runscript

    /opt/mpiBench/mpiBench "$@"