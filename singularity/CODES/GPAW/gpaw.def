Bootstrap: localimage
From: mpibase.sif

%post
    # Paths to the compiled netcdf, pnetcdf file
    BUILDDIR=/tmp
    PREFIX=/usr/local

    # Install blas, lapack and libxc
    apt-get -y install libopenblas-dev liblapack-dev libxc-dev

    # Install Python packages
    python3 -m pip install gpaw

    # Get GPAW setups
    mkdir -p /usr/local/share
    curl -L https://wiki.fysik.dtu.dk/gpaw-files/gpaw-setups-0.9.20000.tar.gz | tar -xzC /usr/local/share

%environment

    export GPAW_SETUP_PATH=/usr/local/share/gpaw-setups-0.9.20000

%runscript 
    python3 "$@"
